<Window x:Class="ModLoader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModLoader"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Button" HorizontalAlignment="Left" Margin="22,23,0,0" VerticalAlignment="Top" Click="Button_Click" Grid.Row="0"/>
        <ScrollViewer Grid.Row="2">
            <TextBox HorizontalAlignment="Left" Margin="22,71,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" x:Name="HtmlOutput" Grid.Row="1"/>
        </ScrollViewer>
    </Grid>
</Window>
